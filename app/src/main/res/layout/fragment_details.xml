<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    tools:context="com.github.abhijit.placefinder.ui.fragment.map.MapFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold" />

        <View
            android:id="@+id/horizontalLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tvTitle"
            android:background="@android:color/darker_gray" />


        <RatingBar
            android:id="@+id/ratingBar"
            android:theme="@style/RatingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/horizontalLine"
            android:layout_alignParentEnd="true"
            android:numStars="5"
            android:rating="3" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ratingBar"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:padding="2dp"
            android:text="355 Serrano Dr"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/tvContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAddress"
            android:drawableStart="@android:drawable/stat_sys_phone_call_forward"
            android:gravity="center_vertical"
            android:text="11231231232131"/>

        <ImageView
            android:id="@+id/imageContainer"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/placeholder"
            android:layout_below="@+id/tvContact"
            android:layout_margin="4dp"
            android:scaleType="centerCrop" />

        <ListView
            android:id="@+id/reviewList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageContainer" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
